{
  "manifest_version": 3,
  "name": "API请求捕获器",
  "version": "1.0.0",
  "description": "捕获按钮点击后触发的API请求参数",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "webRequest",
    "system.display",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-new.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "API请求捕获器 - 点击打开捕获窗口",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 